{
    "include": ["src"],
    "exclude": ["node_modules", "test", "dist", "**/*test.ts"],
    "compilerOptions": {
        "target": "es5",
        "types": ["reflect-metadata", "jest"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./"
    }
}